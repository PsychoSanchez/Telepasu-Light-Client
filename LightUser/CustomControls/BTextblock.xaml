<UserControl x:Class="LightUser.CustomControls.BTextblock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LightUser.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="106">
    <TextBlock Width="{Binding ActualWidth, ElementName=parentElementName}" Style="{StaticResource TextBlockStyle}" HorizontalAlignment="Left" Margin="165,194,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

</UserControl>
